#include <iostream>
#include <string>
using namespace std;

void column_major_order(int arr2[2][2]) {
	int index = 0;
	int col_array[4];
	for (int i = 0; i < 2; i++) {
		for (int j = 0; j < 2; j++) {
			col_array[index] = arr2[j][i]; 
			index++;}}cout << endl;
//printing resulted array
	cout << endl<<" { ";
	for (int i = 0; i < 4; i++) {
		cout << col_array[i] << "  ";}cout<<" } ";
}
int main() {

int arr[2][2];
// taking user input to fill array
for(int i=0;i<2;i++){
 for (int j = 0; j < 2; j++) {
	cout << "enter data for row  " << i << " and column  " << j<<": ";
	cin >> arr[i][j]; 	} }
//printing my 2D  array
cout << endl;
for (int i = 0; i < 2; i++) {
    cout << " { ";  
    for (int j = 0; j < 2; j++) {
        cout << arr[i][j];  
        if (j < 1) {cout << " , ";} }cout << " } ";  
    if (i < 1) {cout << " ,\n"; }}
//function call
column_major_order(arr);
return 0;
}





